<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="PHPCuong\CustomLogFile\Logger\Handler\Customer">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="PHPCuong\CustomLogFile\Logger\Customer">
        <arguments>
            <argument name="name" xsi:type="string">customer_logger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">PHPCuong\CustomLogFile\Logger\Handler\Customer</item>
            </argument>
        </arguments>
    </type>
</config>
